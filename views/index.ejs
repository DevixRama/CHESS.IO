<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Chess Clash - (Online)</title>
  <link rel="icon" type="image/png" href="/assets/fav-icon.png" />
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Boxicons CDN -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

  <!-- Toastify CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">


  <link rel="stylesheet" href="/css/style.css" />
</head>

<body>



  <div
    class=" max-h-screen flex flex-wrap flex-row-reverse w-full min-h-screen lg:px-12 gap-4 bg-[#1E1E1E] text-gray-200">
    <!-- Header -->
    <div class="w-full h-16 bg-[#2A2A2A] flex items-center justify-between px-8 shadow mx-4 rounded">
      <div class="text-gray-100 text-xl flex text-center items-center gap-2 font-semibold"><span
          class="tracking-wider">Chess Clash 
          <span class="text-green-600 font-medium">(Online)</span></span>
          <span>
            <img class="w-8" src="/assets/fav-icon.png" alt="Chess Clash">
            <!-- <i class='bx  bx-chess-knight' style='color:#ffffff'></i>  -->
          </span>
          </div>
      <div class="text-gray-400 flex items-center text-sm"><i class="fa-brands fa-github text-sm mr-2"></i>DevixRama
      </div>
    </div>

    <!-- Content -->
    <div
      class="w-full md:flex-1 flex items-center justify-center p-2 overflow-x-hidden m-4 md:mb-24 rounded shadow bg-[#2A2A2A]">

      <div id="chessboard"
        class="chessboard grid grid-cols-8 grid-rows-8 w-[90vw] max-w-[650px] h-[90vw] max-h-[500px] border-2 border-gray-600">
        <% for (let row=0; row<8; row++) { %>
          <% for (let col=0; col<8; col++) { %>
            <div class="square flex items-center justify-center text-3xl cursor-pointer" data-row="<%= row %>"
              data-col="<%= col %>" style="background-color: <%= (row + col) % 2 === 0 ? '#eee' : '#555' %>;">
            </div>
            <% } %>
              <% } %>
      </div>


    </div>

    <!-- Sidebar -->
    <div class="w-full md:w-1/4 flex flex-col gap-3 p-3 m-4 md:mb-24 rounded shadow bg-[#2A2A2A]">
      <button id="resetBtn" 
        class="bg-zinc-700 text-gray-200 font-medium p-2 rounded shadow-sm hover:bg-red-800 transition">
        Reset Game <i class="pl-2 fa-solid fa-rotate-left"></i>
      </button>
      <button id="turnBtn"
        class="bg-zinc-700 text-gray-200 font-medium py-2 px-4 rounded shadow-sm hover:text-black hover:bg-white transition">
        White's Turn
      </button>
    </div>
  </div>





  <script src="https://cdn.socket.io/4.8.1/socket.io.min.js"
    integrity="sha384-mkQ3/7FUtcGyoppY6bz/PORYoGqOl7/aSUMn2ymDOJcapfS6PHqxhRTMh1RR0Q6+"
    crossorigin="anonymous"></script>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/chess.js/0.10.3/chess.min.js"
    integrity="sha512-xRllwz2gdZciIB+AkEbeq+gVhX8VB8XsfqeFbUh+SzHlN96dEduwtTuVuc2u9EROlmW9+yhRlxjif66ORpsgVA=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>

  <!-- Toastify JS -->
  <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
  <script src="/js/script.js"></script>
</body>

</html>